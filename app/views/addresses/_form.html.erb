
<%= render 'shared/header_dinamic' %>

<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
  <div class="field">
    <div class="control">
      <%= f.input :body, :label => "Introduzca su direccion",required: true, input_html: { class: "input"}, 
                 wrapper: false, label_html: { class: "label" } %>
    
    </div>
  </div>
   <br>

  <div class="form-actions">
    <%= f.button :submit, class: "button is-info " %>
  </div>


  <br>
   <%= link_to 'Regresar', :back, class:"button"%>
  </div>
<% end %>

