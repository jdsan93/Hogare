<% provide(:title, "Entrar") %>
<% provide(:title_header, "Entrar") %>

<%= render 'shared/header_dinamic' %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <div class="control">
              <%= f.input :email, required: false, 
                          input_html: { class: "input"}, 
                          wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password,
                          :label => "ContraseÃ±a",
                          required: false, input_html: { class: "input"}, 
                          wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :remember_me,
                          :label => "Recuerdame",
                          wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          
          <div class="form-actions">
            <%= f.button :submit, "Entrar", class:"button is-outlined is-medium" %> 
          </div>

        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
