<div class="section">                                                           
  <div class="container" align="center">                                        
    <div class="columns is-centered">                                           
      <div class="column is-4">                                                 
        <%= form_for(resource) do |f| %>              
          <% if resource.errors.any? %>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
          <div class="field">                                                   
            <div class="control">                                               
              <%= f.label "nombre" %>                                              
              <%= f.text_field :name, class: "input is-primary" %>              
            </div>                                                              
          </div>                                                                
                                                                                
          <div class="field">                                                   
            <div class="control">                                               
              <%= f.label "Telefono" %>                                             
              <%= f.telephone_field :phone, class: "input is-primary" %>           
            </div>                                                              
          </div>                                                                
                                                                                 
          <div class="field">                                                   
            <div class="control">                                               
              <%= f.submit "Actualizar informaciÃ³n", class: "button is-info is-medium" %>
            </div>                                                              
          </div>                                                                
        <% end %>   
         <br>
        <br>
        <%= link_to 'Regresar', :back ,class:"button"%>                                                            
      </div>                                                                    
    </div>                                                                      
  </div>                                                                        
</div>
